<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <!-- A CardView that contains a TextView -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/wordCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        android:padding="10dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:elevation="@dimen/cardview_default_elevation">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wordCardWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abase"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="#0e3048"
                android:textSize="20dp"
                android:shadowColor="#7bbee4" />
            <TextView
                android:id="@+id/wordCardmeaning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lower; degrade; humiliate; make humble; make (oneself) lose self-respect"
                android:textAlignment="center"
                android:layout_below="@+id/wordCardWord"
                android:padding="5dp" />
            <TextView
                android:id="@+id/wordCardExample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="He humiliated his colleague by criticising him in front of the boss "
                android:textAlignment="center"
                android:layout_below="@+id/wordCardmeaning"
                android:padding="5dp" />

            <TextView
                android:id="@+id/wordCardMnemonics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="abase-abe(a slang used to degrade acvv person)+shhh(se)usually an attempt to degrade a person&apos;s opinion..ovral goes to humiliate a person.."
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_below="@+id/wordCardExample"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous Card"
            android:id="@+id/prevCardButton"
            android:textSize="15dp"
            android:textColor="#0e3048"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Next Card"
            android:id="@+id/nextCardButton"
            android:layout_margin="8dp"
            android:textSize="15dp"
            android:textColor="#0e3048" />
    </RelativeLayout>

</LinearLayout>